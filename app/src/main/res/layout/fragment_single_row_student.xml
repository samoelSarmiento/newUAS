<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateSingleRow"
            style="@style/GeneralTextViewsSmall"
            android:layout_marginTop="10dp"
            android:text="14/07/2016"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/hourSingleRow"
            style="@style/GeneralTextViewsSmall"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:text="14:00:00"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/topicSingleRow"
            style="@style/GeneralTextViewsSmall"
            android:layout_width="80dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:text="EconÃ³mico"
            android:textColor="@color/black"

            />

        <ImageButton
            android:id="@+id/icon1SingleRow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_check" />

        <ImageButton
            android:id="@+id/icon2SingleRow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_cross" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/GeneralTextViewsSmall"
            android:layout_width="wrap_content"
            android:text="Estado:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stateSingleRow"
            style="@style/GeneralTextViewsSmall"
            android:layout_marginLeft="10dp"
            android:background="@drawable/item_shape"
            android:text="Sugerida"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/black" />


</LinearLayout>