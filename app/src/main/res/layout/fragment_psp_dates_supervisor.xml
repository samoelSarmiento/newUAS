<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="uas.pe.edu.pucp.newuas.fragment.PSP_selection_kind_documents">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/divider"
            android:textColor="@color/black"
            android:text="Seleccione el boton" />


        <Button
            android:id="@+id/psp_boton_citas_supervisor_jefe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.Button.uas"
            android:layout_marginBottom="@dimen/divider"
            android:text="Citar al jefe"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/psp_boton_citas_supervisor_alumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.Button.uas"
            android:text="Citar al alumno"
            android:textColor="@color/white" />


    </LinearLayout>









</LinearLayout>
