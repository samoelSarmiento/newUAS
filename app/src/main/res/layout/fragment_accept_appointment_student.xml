<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="40dp"
    tools:context="uas.pe.edu.pucp.newuas.fragment.AcceptAppointmentStudentFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:gravity="center"
            android:text="Esta a punto de cancelar su cita con su tutor para el 09/11/2016 a las 10:00am"
            android:textColor="@color/black" />

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Â¿Desea continuar?"
            android:textColor="@color/black"

            />
    </LinearLayout>

    \

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="@color/white"
            android:theme="@style/AppTheme.Button.uas" />


        <Button
            android:id="@+id/buttonSolicitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:text="Aceptar"
            android:textColor="@color/white"
            android:theme="@style/AppTheme.Button.uas" />


    </LinearLayout>


</LinearLayout>
