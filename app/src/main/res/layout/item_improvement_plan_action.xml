<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_shape">

        <TextView
            android:id="@+id/tvactionsemester"
            android:layout_width="0dp"
            android:layout_height="@dimen/list_item_height"
            android:layout_weight="0.20"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/half_divider"
            android:paddingStart="@dimen/half_divider"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvactiondesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/half_divider"
                android:paddingStart="@dimen/half_divider"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvactionresp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/half_divider"
                android:paddingStart="@dimen/half_divider"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvactioncomm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/half_divider"
                android:paddingStart="@dimen/half_divider"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvactionperc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/half_divider"
                android:paddingStart="@dimen/half_divider"
                android:textColor="@color/black" />


        </LinearLayout>

        <Button
            android:id="@+id/btnDownloadFileAction"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.30"
            android:drawableTop="@drawable/ic_get_app_white_36dp"
            android:text="@string/btArchAction"
            android:textAlignment="center"
            android:theme="@style/AppTheme.Button.uas" />


    </LinearLayout>

</LinearLayout>