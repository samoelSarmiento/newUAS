<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/item_shape"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvCritName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.55"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/half_divider"
            android:paddingStart="@dimen/half_divider"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvCritStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.45"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_36dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_36dp"
            android:gravity="center_vertical" />


    </LinearLayout>

</LinearLayout>