
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_containerStudent"
    tools:context="uas.pe.edu.pucp.newuas.fragment.DateSupervisorStudentEmployer"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/fragment_top">

    <Button
        android:id="@+id/btnNewAssignment_psp_dates_sup_emp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/left_right_padding"
        android:layout_marginLeft="@dimen/left_right_padding"
        android:text="Nueva Cita"
        android:theme="@style/AppTheme.Button.uas"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="115dp"
        android:orientation="horizontal">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Fecha"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Hora"
            android:textColor="@color/black"
            android:layout_marginLeft="50dp"
            android:textStyle="bold" />

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Lugar"
            android:textColor="@color/black"
            android:layout_marginLeft="50dp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:layout_marginTop="140dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listViewCustom_psp_dates_sup_emp"
        android:layout_marginTop="140dp"
        android:listSelector="@android:color/transparent"
        >

    </ListView>



</FrameLayout>
