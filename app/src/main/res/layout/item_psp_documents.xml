<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre documento"
            android:id="@+id/tv_name_document"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:id="@+id/tv_author_document"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="formato"
            android:id="@+id/tv_format_document"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de creacion"
            android:id="@+id/tv_creation_document"/>
    </LinearLayout>
    <ImageView
        android:layout_weight="0.1"
        android:layout_gravity="right"
        android:src="@drawable/ic_menu_psp_listview"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</LinearLayout>