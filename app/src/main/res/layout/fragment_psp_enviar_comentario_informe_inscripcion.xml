<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uas_plomo_fondo"
    android:orientation="vertical"
    android:paddingTop="70dp">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btEnviarComentarioPSPaccion"
        android:layout_width="114dp"
        android:layout_height="65dp"
        android:layout_gravity="start|bottom"
        android:background="@drawable/bg_button_login_selector"
        android:text="Enviar Comentario"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_gravity="start|top"
        android:text="Comentario anterior"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editTextComentarioAnteriorPSPinforme"
        android:layout_width="166dp"
        android:layout_height="143dp"
        android:layout_gravity="end|top"
        android:enabled="true"
        android:text="" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:text="Nuevo comentario"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btEnviarComentarioPSPcancelar"
        android:layout_width="146dp"
        android:layout_height="59dp"
        android:layout_gravity="end|bottom"
        android:background="@drawable/bg_button_login_selector"
        android:text="Aceptar"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextComentarioPSPinforme"
        android:layout_width="168dp"
        android:layout_height="149dp"
        android:layout_gravity="end|center_vertical"
        android:text="" />

</FrameLayout>