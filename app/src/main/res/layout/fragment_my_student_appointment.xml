<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="30dp"
    android:id="@+id/fragment_containerStudent"
    tools:context="uas.pe.edu.pucp.newuas.fragment.AlumnoNuevaCitaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnFilterAssignments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"

            android:theme="@style/AppTheme.Button.uas"
            android:textColor="@color/white"
            android:text="Filtrar" />

        <Button
            android:id="@+id/btnNewAssignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="106dp"

            android:theme="@style/AppTheme.Button.uas"
            android:textColor="@color/white"
            android:text="Nueva Cita" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="105dp"
        android:orientation="horizontal">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Fecha"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Hora"
            android:textColor="@color/black"
            android:layout_marginLeft="50dp"
            android:textStyle="bold" />

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Tema"
            android:textColor="@color/black"
            android:layout_marginLeft="50dp"
            android:textStyle="bold" />

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Acción"
            android:textColor="@color/black"
            android:layout_marginLeft="45dp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:layout_marginTop="130dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="445dp"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="13dp">

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="11/07/2016"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"

                    />

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="10:00 am"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="Académico"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_eye"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="26dp"
                    android:scaleType="fitXY"
                    android:id="@+id/btnSeek"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="Estado:"
                    android:textColor="@color/black"
                    android:layout_marginLeft="117dp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="No asistida"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="13dp">

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="14/07/2016"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"

                    />

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="10:00 am"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="Familiar"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    />

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_cross"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="43dp"
                    android:scaleType="fitXY"
                    android:id="@+id/cross1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="Estado:"
                    android:textColor="@color/black"
                    android:layout_marginLeft="117dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content" />

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="Pendiente"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="13dp">

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="14/07/2016"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"

                    />

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="14:00 pm"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="Económico"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_check"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="26dp"
                    android:scaleType="fitXY"
                    android:id="@+id/check"
                    />

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_cross"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="0dp"
                    android:scaleType="fitXY"
                    android:id="@+id/btnAccept"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="Estado:"
                    android:textColor="@color/black"
                    android:layout_marginLeft="117dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content" />

                <TextView
                    style="@style/GeneralTextViewsSmall"
                    android:text="Sugerida"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/black"/>


        </LinearLayout>



    </ScrollView>





</FrameLayout>
