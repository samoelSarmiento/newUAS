<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_shape"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvValueHorario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider"
            android:layout_weight="0.25"
            android:gravity="start|center"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <ListView
            android:id="@+id/lvTeacherList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="15dp">

        </ListView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider"
            android:layout_weight="0.20"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_36dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_36dp"
            android:gravity="start|center" />
    </LinearLayout>


</LinearLayout>