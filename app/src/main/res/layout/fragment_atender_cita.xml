<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingLeft="@dimen/half_divider"
    android:paddingRight="@dimen/half_divider"
    android:paddingTop="@dimen/fragment_top"
    tools:context="uas.pe.edu.pucp.newuas.fragment.AtenderCitaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="720dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/general_bg_padding"
            android:orientation="vertical">

            <TextView
                style="@style/GeneralTextViewsMedium"
                android:text="Codigo:"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/codigoAtenderCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/general_bg_padding" />


            <TextView
                style="@style/GeneralTextViewsMedium"
                android:layout_marginTop="26dp"
                android:text="Alumno:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alumnoAtenderCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/general_bg_padding" />

            <TextView
                style="@style/GeneralTextViewsMedium"
                android:layout_marginTop="26dp"
                android:text="Fecha:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fechaAtenderCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/general_bg_padding" />

            <TextView
                style="@style/GeneralTextViewsMedium"
                android:layout_marginTop="26dp"
                android:text="Hora inicio:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/horaIAtenderCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/general_bg_padding" />

            <TextView
                style="@style/GeneralTextViewsMedium"
                android:layout_marginTop="26dp"
                android:text="Lugar:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lugarAtenderCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/general_bg_padding" />

            <TextView
                style="@style/GeneralTextViewsMedium"
                android:layout_marginTop="26dp"
                android:text="Información Extra:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/extraAtenderCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/general_bg_padding"
                android:text="No hay información extra" />

            <TextView
                style="@style/GeneralTextViewsMedium"
                android:layout_marginTop="26dp"
                android:text="Observaciones:"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/observacionAtenderCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/general_bg_padding"
                android:lines='2' />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancelarAtenderCita"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:textColor="@color/white"
                    android:layout_marginLeft="0dp"
                    android:theme="@style/AppTheme.Button.uas" />


                <Button
                    android:id="@+id/btnSolicitarAtenderCita"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:text="Registrar"
                    android:textColor="@color/white"
                    android:theme="@style/AppTheme.Button.uas" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



    </LinearLayout>
</ScrollView>
