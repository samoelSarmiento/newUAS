<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/fragment_top">

    <ListView
        android:id="@+id/psp_lstItemsIncriptionFiles"
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:layout_weight="0.03"
        android:divider="@color/white"
        android:dividerHeight="@dimen/half_divider">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_weight="0.20"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/btEnviarComentariopspSobreinscripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/left_right_padding"
            android:layout_marginRight="@dimen/left_right_padding"
            android:clickable="false"
            android:enabled="true"
            android:text="Mandar comentario"
            android:textColor="@color/white"
            android:theme="@style/AppTheme.Button.uas" />

        <Button
            android:id="@+id/btAceptarpspSobreinscripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/divider"
            android:layout_marginLeft="@dimen/left_right_padding"
            android:layout_marginRight="@dimen/left_right_padding"
            android:layout_marginTop="@dimen/divider"
            android:enabled="true"
            android:text="Cancelar"
            android:textColor="@color/white"
            android:theme="@style/AppTheme.Button.uas" />
    </LinearLayout>
</LinearLayout>
