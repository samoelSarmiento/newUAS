<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="@dimen/fragment_top"
    tools:context="uas.pe.edu.pucp.newuas.fragment.StudentFilterAppointmentFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Motivo:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerMotivoFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_padding"
            android:layout_marginRight="@dimen/left_right_padding"
            android:layout_marginTop="@dimen/general_bg_padding" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Fecha:"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_bg_padding"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Desde:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtFechaBeginFilterStudent"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:ems="10"
            android:inputType="date" />


        <ImageButton
            android:id="@+id/btnCalendarBeginFilterStudent"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_calendar" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/general_bg_padding"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:layout_marginTop="@dimen/general_bg_padding"
            android:text="Hasta:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtFechaEndFilterStudent"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:ems="10"
            android:inputType="date" />


        <ImageButton
            android:id="@+id/btnCalendarEndFilterStudent"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_calendar" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancelarFilterStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_main_uas"
            android:text="Cancelar"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/buttonSolicitarFilterStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:background="@drawable/btn_main_uas"
            android:text="Aceptar"
            android:textColor="@color/white" />


    </LinearLayout>


</LinearLayout>
