<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_shape"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvIdentif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.15"
        android:gravity="center"
        android:paddingEnd="@dimen/half_divider"
        android:paddingStart="@dimen/half_divider"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.85"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_36dp"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_36dp"
        android:paddingEnd="@dimen/half_divider"
        android:paddingStart="@dimen/half_divider"
        android:textAllCaps="true"
        android:textColor="@color/black" />
</LinearLayout>