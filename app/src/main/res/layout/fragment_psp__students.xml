<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingTop="70dp"
    tools:context="uas.pe.edu.pucp.newuas.fragment.PSP_studentsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:hint="nombre"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_padding"
            android:layout_marginRight="@dimen/left_right_padding"
            android:theme="@style/AppTheme.Button.uas"
            android:textColor="@color/white"
            android:text="Buscar"/>

    </LinearLayout>



    <ListView
        android:id="@+id/lv_psp_students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>
