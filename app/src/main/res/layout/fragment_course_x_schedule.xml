<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/fragment_top"
    tools:context="uas.pe.edu.pucp.newuas.fragment.CoursexScheduleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/divider"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHorario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:paddingEnd="@dimen/divider"
            android:paddingStart="@dimen/divider"
            android:text="@string/tvHorario"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:paddingEnd="@dimen/divider"
            android:paddingStart="@dimen/divider"
            android:text="@string/tvProfessor"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvSchedules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/white"
        android:layout_marginTop="@dimen/divider"
        android:paddingEnd="@dimen/divider"
        android:paddingStart="@dimen/divider">

    </ListView>


</LinearLayout>
