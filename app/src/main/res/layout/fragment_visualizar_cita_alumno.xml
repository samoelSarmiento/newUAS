<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/fragment_top"
    tools:context="uas.pe.edu.pucp.newuas.fragment.VisualizarCitaAlumnoFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/GeneralTextViewsMedium"
                android:text="Codigo:"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/VerCodigoAtenderCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/general_bg_padding" />


            <TextView
                style="@style/GeneralTextViewsMedium"
                android:layout_marginTop="26dp"
                android:text="Alumno:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/VerAlumnoAtenderCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/general_bg_padding" />

            <TextView
                style="@style/GeneralTextViewsMedium"
                android:layout_marginTop="26dp"
                android:text="Fecha:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/VerFechaAtenderCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/general_bg_padding" />

            <TextView
                style="@style/GeneralTextViewsMedium"
                android:layout_marginTop="26dp"
                android:text="Hora inicio:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/VerHoraIAtenderCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/general_bg_padding" />

            <TextView
                style="@style/GeneralTextViewsMedium"
                android:layout_marginTop="26dp"
                android:text="Lugar:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/VerLugarAtenderCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/general_bg_padding" />

            <TextView
                style="@style/GeneralTextViewsMedium"
                android:layout_marginTop="26dp"
                android:text="InformaciÃ³n Extra:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/VerExtraAtenderCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/general_bg_padding" />

            <TextView
                style="@style/GeneralTextViewsMedium"
                android:layout_marginTop="26dp"
                android:text="Observaciones:"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/VerObsAtenderCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/general_bg_padding" />

            <Button
                android:id="@+id/btnRegresarVisualizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:theme="@style/AppTheme.Button.uas"
                android:text="Regresar"
                android:textColor="@color/white" />

        </LinearLayout>



    </LinearLayout>




</ScrollView>
