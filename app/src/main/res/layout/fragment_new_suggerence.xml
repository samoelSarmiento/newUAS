<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="70dp"
    tools:context="uas.pe.edu.pucp.newuas.fragment.NewSuggerenceFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvTitle"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:maxLines="1"
        android:minLines="1"
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/tvSuggerence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@string/tvSuggerence"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/etValueSuggerence"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:paddingTop="20dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/left_right_padding"
        android:layout_marginStart="@dimen/left_right_padding"
        android:layout_marginTop="@dimen/divider"
        android:text="@string/btSave"
        android:theme="@style/AppTheme.Button.uas" />
</LinearLayout>
