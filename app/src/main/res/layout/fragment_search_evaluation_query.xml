<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/fragment_top">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/divider"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView3"
            style="@style/GeneralTextViewsMedium"
            android:text="@string/tvAcrName"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/evQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/divider"
        android:orientation="horizontal">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="@string/tvIpStatus"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/evst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

    </LinearLayout>

    <Button
        android:id="@+id/invSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/left_right_padding"
        android:layout_marginStart="@dimen/left_right_padding"
        android:text="@string/buscar"
        android:textColor="@color/white"
        android:theme="@style/AppTheme.Button.uas" />

</LinearLayout>