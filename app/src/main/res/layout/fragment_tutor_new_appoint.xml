<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="@dimen/fragment_top"
    tools:context="uas.pe.edu.pucp.newuas.fragment.TutorNewAppointFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Alumno:"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/tutorStudentSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/left_right_padding"
            android:layout_marginRight="@dimen/left_right_padding"
            android:layout_marginTop="@dimen/general_bg_padding" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Fecha:"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/general_bg_padding"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btnCalendarTutorNewAppoint"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_calendar" />


        <EditText
            android:id="@+id/dateTextTutorNewAppoint"
            android:layout_marginLeft="20dp"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Hora:"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/spinnerTutHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_padding"
            android:layout_marginRight="@dimen/left_right_padding"
            android:layout_marginTop="@dimen/general_bg_padding" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Tema:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerTema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/left_right_padding"
            android:layout_marginRight="@dimen/left_right_padding"
            android:layout_marginTop="@dimen/general_bg_padding" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancelarTutorNewAssigmentReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="@color/white"
            android:theme="@style/AppTheme.Button.uas" />


        <Button
            android:id="@+id/buttonSolicitarTutorNewAssignmentReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:text="Solicitar"
            android:textColor="@color/white"
            android:theme="@style/AppTheme.Button.uas" />


    </LinearLayout>


</LinearLayout>
