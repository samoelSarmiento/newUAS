<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="70dp"
    android:gravity="center"
    android:background="@color/mdtp_neutral_pressed"
    tools:context="uas.pe.edu.pucp.newuas.fragment.PSP_SupxStudentMeetingDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:paddingLeft="30dp"
            android:layout_height="match_parent">

            <TextView
                android:text="Reunion"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:text="Codigo"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <TextView
                android:text="Alumno"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:text="Fecha"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:text="Hora Inicio"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <TextView
                android:text="Hora Fin"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <TextView
                android:text="Lugar"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="25dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:text="Reunion"
                android:id="@+id/tv_psp_sup_meeting_number"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                />

            <TextView
                android:text="ALumno"
                android:id="@+id/tv_psp_sup_meeting_student_name"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <TextView
                android:text="Codigo"
                android:id="@+id/tv_psp_sup_meeting_student_id"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />
            <TextView
                android:text="Fecha"
                android:id="@+id/tv_psp_sup_meeting_date"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/tv_psp_sup_meeting_at_hour"
                android:text="Hora Inicio"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <TextView
                android:text="Hora Fin"
                android:id="@+id/tv_psp_sup_meeting_to_hour"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <EditText

                android:id="@+id/et_psp_sup_meeting_place"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="25dp" />


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:paddingEnd="30dp"
        android:paddingRight="30dp">

        <TextView
            android:text="Observaciones"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/et_psp_sup_meeting_observations" />
        <TextView
            android:textStyle="bold"
            android:text="Retroalimentacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/et_psp_sup_meeting_feedback" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="wrap_content">
            <Button
                android:text="Editar"
                android:id="@+id/btn_psp_sup_meeting_detail_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="Cancelar"
                android:id="@+id/btn_psp_sup_meeting_detail_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>



    </LinearLayout>



</LinearLayout>
