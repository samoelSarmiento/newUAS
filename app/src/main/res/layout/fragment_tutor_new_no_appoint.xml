<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uas.pe.edu.pucp.newuas.fragment.TutorNewNoAppointFragment"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="80dp"
    android:id="@+id/fragment_container"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Alumno:"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutorStudentSpinner"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/left_right_padding"
            android:layout_marginLeft="@dimen/left_right_padding"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Hora inicio:"

            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        >

        <EditText
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="25dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/timeText"
            />


        <ImageButton
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_clock"
            android:background="@android:color/transparent"
            android:layout_marginLeft="230dp"
            android:id="@+id/btnClock"
            />



    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp">

        <TextView
            style="@style/GeneralTextViewsMedium"
            android:text="Tema:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerTema"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/left_right_padding"
            android:layout_marginLeft="@dimen/left_right_padding"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp">

        <TextView
            style="@style/GeneralTextViewsMedium"

            android:text="ObservaciÃ³n:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutoTextObsNoAppoint"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:lines = '3'

        />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="90dp"
    >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:background="@drawable/btn_main_uas"
            android:textColor="@color/white"
            android:id="@+id/buttonCancelarTutorNewNoAssigmentReg" />


        <Button
            android:layout_marginLeft="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solicitar"
            android:background="@drawable/btn_main_uas"
            android:textColor="@color/white"
            android:id="@+id/buttonSolicitarTutorNewNoAssignmentReg" />


    </LinearLayout>

    </LinearLayout>
</ScrollView>
