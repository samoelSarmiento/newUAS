<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_shape">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/list_item_height"
            android:layout_weight="0.65"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tviplistname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/half_divider"
                android:paddingStart="@dimen/half_divider" />

            <TextView
                android:id="@+id/tviplistuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/half_divider"
                android:paddingStart="@dimen/half_divider" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvipliststatus"
            android:layout_width="0dp"
            android:layout_height="@dimen/list_item_height"
            android:layout_weight="0.35"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_36dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_36dp"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/half_divider"
            android:paddingStart="@dimen/half_divider" />

    </LinearLayout>


</LinearLayout>