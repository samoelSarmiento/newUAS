<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        >

        <TextView
            style="@style/GeneralTextViewsSmall"
            android:text="Henry Losa"
            android:layout_width="110dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:id="@+id/studentCoordinatorSingleRow"

            />

        <TextView
            style="@style/GeneralTextViewsSmall"
            android:text="Juan Gabriel"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_width="110dp"
            android:textColor="@color/black"
            android:id="@+id/tutorCoordinatorSingleRow"

            />

        <TextView
            style="@style/GeneralTextViewsSmall"
            android:text="Activo"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:id="@+id/stateCoordinatorSingleRow"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >


        <TextView
            style="@style/GeneralTextViewsSmall"
            android:text="20101616"
            android:textColor="@color/black"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:layout_marginRight="220dp"
            android:id="@+id/codeCoordinatorSingleRow"

            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="@android:color/black"/>


</LinearLayout>