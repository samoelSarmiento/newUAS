<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/studentCoordinatorSingleRow"
            style="@style/GeneralTextViewsSmall"
            android:layout_width="110dp"
            android:layout_marginTop="10dp"
            android:text="Henry Losa"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/tutorCoordinatorSingleRow"
            style="@style/GeneralTextViewsSmall"
            android:layout_width="110dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="Juan Gabriel"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/stateCoordinatorSingleRow"
            style="@style/GeneralTextViewsSmall"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="Activo"
            android:textColor="@color/black"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <TextView
            android:id="@+id/codeCoordinatorSingleRow"
            style="@style/GeneralTextViewsSmall"
            android:layout_marginRight="220dp"
            android:layout_marginTop="0dp"
            android:text="20101616"
            android:textColor="@color/black"
            android:textStyle="bold"

            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="@android:color/black" />


</LinearLayout>