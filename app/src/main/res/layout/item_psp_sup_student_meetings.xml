<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_psp_sup_student_meeting_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mdtp_neutral_pressed"
        android:paddingEnd="@dimen/half_divider"
        android:paddingStart="@dimen/half_divider"
        android:text="Fecha: "
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:orientation="vertical"
            android:paddingEnd="@dimen/half_divider"
            android:paddingStart="@dimen/half_divider">

            <TextView
                android:id="@+id/tv_item_psp_sup_student_meeting_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reunion: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_psp_sup_student_meeting_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: "
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:orientation="vertical"
            android:paddingEnd="@dimen/half_divider"
            android:paddingStart="@dimen/half_divider">

            <TextView

                android:id="@+id/tv_item_psp_sup_student_meeting_atHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora Inicio: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_psp_sup_student_meeting_toHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora Fin: "
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_item_psp_sup_student_meeting_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_options_icon_psp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>